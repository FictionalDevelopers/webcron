{
  "name": "webcron",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:FictionalDevelopers/webcron.git",
  "author": "dmitry.honcharuk <dmitry.honcharuk@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "build:common": "concurrently \"cd entities tsc --build\" \"cd config tsc --build\"",
    "dev:common": "concurrently \"tsc -p entities/tsconfig.json --watch\" \"tsc -p config/tsconfig.json --watch\"",
    "dev": "yarn build:common && concurrently \"yarn dev:common\" \"yarn dev:server\" \"yarn dev:client\"",
    "dev:server": "cd server && yarn build:server && concurrently \"tsc --watch\" \"nodemon dist/index.js\"",
    "build:server": "cd server && rimraf dist && tsc --build",
    "dev:client": "cd client && rollup -c -w",
    "build:client": "cd client && rollup -c",
    "start:client": "cd client && sirv public --port 5000"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "ky": "^0.25.0",
    "rimraf": "^3.0.2",
    "sirv-cli": "^1.0.8"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "concurrently": "^5.3.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rollup": "^2.34.0",
    "rollup-plugin-css-only": "^3.0.0",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.30.0",
    "svelte-check": "^1.1.17",
    "svelte-preprocess": "^4.6.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  },
  "_moduleAliases": {
    "@webcron/config": "config/dist",
    "@webcron/entities": "entities/dist"
  }
}
